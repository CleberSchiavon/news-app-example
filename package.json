{
  "name": "news-app-example",
  "private": true,
  "author": "Cleber Henrique",
  "version": "0.0.2",
  "scripts": {
    "api:dev": "dotenv -- turbo run dev --filter=./apps/api/",
    "api:test": "dotenv -- turbo run test --filter=./apps/api/",
    "api:test-watch": "dotenv -- turbo run test:watch --filter=./apps/api/",
    "test": "dotenv -- turbo run test",
    "prepare-env": "bash ./scripts/prepare-env.sh",
    "solidarity": "solidarity",
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "bash ./scripts/repo-lint.sh",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "audit:branch": "bash ./scripts/branch-audit.sh",
    "husky:install": "bash ./scripts/husky.sh",
    "clean-repo": "bash ./scripts/clean-repo.sh",
    "changelog": "standard-version"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "husky": "^8.0.3",
    "prettier": "^3.2.5",
    "eslint": "^8.40.0",
    "standard-version": "^9.5.0",
    "lint-staged": "^13.2.2",
    "turbo": "latest",
    "validate-branch-name": "^1.3.0"
  },
  "standard-version": {
    "standard-version": {
      "types": [
        {
          "type": "rc",
          "section": "Release"
        },
        {
          "type": "feat",
          "section": "Features"
        },
        {
          "type": "fix",
          "section": "Bug Fixes"
        },
        {
          "type": "hotfix",
          "section": "Bug Fixes"
        },
        {
          "type": "ci",
          "section": "CI"
        },
        {
          "type": "chore",
          "section": "Chores"
        },
        {
          "type": "style",
          "section": "Styles"
        },
        {
          "type": "docs",
          "section": "Documentação"
        },
        {
          "type": "perf",
          "section": "Melhoria de Perfomance"
        },
        {
          "type": "refac",
          "section": "Refatorações"
        },
        {
          "type": "revert",
          "section": "Reversal"
        },
        {
          "type": "test",
          "section": "Tests"
        }
      ]
    }
  },
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "solidarity": "^3.0.4",
    "dotenv-cli": "^7.4.2"
  }
}
